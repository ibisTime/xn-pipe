<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.pipe.dao.IDemandDAO">
	<resultMap id="demand_DB_Result" type="demand">
		<result column="code" property="code" />
		<result column="dealer_code" property="dealerCode" />
		<result column="start_datetime" property="startDatetime" />
		<result column="end_datetime" property="endDatetime" />
		<result column="province" property="province" />
		<result column="city" property="city" />
		<result column="area" property="area" />
		<result column="address" property="address" />
		<result column="longitude" property="longitude" />
		<result column="latitude" property="latitude" />
		<result column="price" property="price" />
		<result column="pic" property="pic" />
		<result column="summary" property="summary" />
		<result column="detail" property="detail" />
		<result column="status" property="status" />
		<result column="create_datetime" property="createDatetime" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<resultMap id="demandList_DB_Result" type="demand">
		<result column="code" property="code" />
		<result column="dealer_code" property="dealerCode" />
		<result column="start_datetime" property="startDatetime" />
		<result column="end_datetime" property="endDatetime" />
		<result column="province" property="province" />
		<result column="city" property="city" />
		<result column="area" property="area" />
		<result column="address" property="address" />
		<result column="longitude" property="longitude" />
		<result column="latitude" property="latitude" />
		<result column="price" property="price" />
		<result column="pic" property="pic" />
		<result column="summary" property="summary" />
		<result column="status" property="status" />
		<result column="create_datetime" property="createDatetime" />
		
		<association property="dealer" javaType="dealer">   
            <result column="dealer_pic" property="pic" />
		    <result column="dealer_name" property="name" />
        </association>
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="province != null and province != '' ">
				AND t.province = #{province}
			</if>
			<if test="city != null and city != '' ">
				AND t.city = #{city}
			</if>
			<if test="area != null and area != '' ">
				AND t.area = #{area}
			</if>
			<if test="summary != null and summary != '' ">
				AND t.summary like "%"#{summary}"%"
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
		</trim>
	</sql>
	<select id="select_demand" parameterType="demand" resultMap="demand_DB_Result">
		SELECT
		t.code
		,t.dealer_code
		,t.start_datetime
		,t.end_datetime
		,t.province
		,t.city
		,t.area
		,t.address
		,t.longitude
		,t.latitude
		,t.price
		,t.summary
		,t.pic
		,t.detail
		,t.status
		,t.create_datetime
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		tp_demand t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>
	
	<select id="select_rangeDemand" parameterType="demand" resultMap="demandList_DB_Result">
		SELECT
		t.code
		,t.dealer_code
		,t.start_datetime
		,t.end_datetime
		,t.province
		,t.city
		,t.area
		,t.address
		,t.longitude
		,t.latitude
		,t.price
		,t.summary
		,t.pic
		,t.status
		,t.create_datetime
		,tdealer.pic dealer_pic
		,tdealer.name dealer_name
		FROM
		tp_demand t LEFT JOIN tp_dealer tdealer ON t.dealer_code = tdealer.code
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_demand_count" parameterType="demand"
		resultType="java.lang.Long">
		SELECT count(1) FROM tp_demand t
		<include refid="where_condition" />
	</select>
	
	<select id="select_rangeDemand_count" parameterType="demand"
		resultType="java.lang.Long">
		SELECT count(1) FROM tp_demand t
		<include refid="where_condition" />
	</select>

	<insert id="insert_demand" parameterType="demand">
		INSERT INTO
		tp_demand(
		code
		,dealer_code
		,start_datetime
		,end_datetime
		,province
		,city
		,area
		,address
		,longitude
		,latitude
		,price
		,summary
		,pic
		,detail
		,status
		,create_datetime
		,updater
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{dealerCode}
		,#{startDatetime}
		,#{endDatetime}
		,#{province}
		,#{city}
		,#{area}
		,#{address}
		,#{longitude}
		,#{latitude}
		,#{price}
		,#{summary}
		,#{pic}
		,#{detail}
		,#{status}
		,#{createDatetime}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_demand" parameterType="demand">
		UPDATE tp_demand
		SET
		start_datetime = #{startDatetime}
		,end_datetime = #{endDatetime}
		,province = #{province}
		,city = #{city}
		,area = #{area}
		,address = #{address}
		,longitude = #{longitude}
		,latitude = #{latitude}
		,price = #{price}
		,summary = #{summary}
		,pic = #{pic}
		,detail = #{detail}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>

    <delete id="delete_demand" parameterType="demand">
		DELETE FROM tp_demand
		WHERE
		code = #{code}
	</delete>

    <update id="update_putOnOff" parameterType="dealer">
		UPDATE tp_demand
		SET
		status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_take" parameterType="dealer">
		UPDATE tp_demand
		SET
		status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>

</mapper>